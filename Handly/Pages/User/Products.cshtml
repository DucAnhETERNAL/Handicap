@page
@model ProductsModel
@{
    ViewData["Title"] = "Products";
}

<h2>Product List</h2>

@if (Model.Products.Any())
{
    <ul>
        @foreach (var product in Model.Products)
        {
            <li>
                <strong>@product.ProductName</strong> - $@product.Price
            </li>
        }
    </ul>
}
else
{
    <p>No products found.</p>
}
